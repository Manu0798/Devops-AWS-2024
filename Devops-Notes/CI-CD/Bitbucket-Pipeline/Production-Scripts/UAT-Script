              echo -e "$BODY" | mutt -s "$SUBJECT" \
                -e "set from=$FROM_EMAIL" \
                -e "set smtp_url=smtp://$SMTP_USER:$SMTP_PASS@$SMTP_SERVER:$SMTP_PORT" \
