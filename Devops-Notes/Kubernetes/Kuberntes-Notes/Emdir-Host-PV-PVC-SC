  capacity:
    storage: 5Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: ebs-sc
  csi:
    driver: ebs.csi.aws.com
    volumeHandle: vol-0e7bc9339916cc688  # Replace with your EBS volume ID or leave empty for dynamic provisioning


pvc.yml

