metadata:
  name: my-new-pv  # Change the name to avoid conflict
spec:
  capacity:
    storage: 5Gi
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: ebs-sc
  csi:
    driver: ebs.csi.aws.com
    volumeHandle: vol-0e7bc9339916cc688  # Replace with your EBS volume ID

