sc.yml

apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: ebs-sc
provisioner: kubernetes.io/aws-ebs  # Ensure the correct provisioner
parameters:
  type: gp3  # Change to gp3 for better performance
  fsType: ext4


pv.yml

apiVersion: v1
